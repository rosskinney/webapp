<h1><%= @project.title %></h1>

<p><%= @project.body %></p>

<% if @project.image_file_name %>
  <p><%= image_tag @project.image.url %></p>
<% end %>

<%= link_to "<< Back to Portfolio List", projects_path %>

<% if logged_in? %>
  <%= link_to "edit", edit_project_path(@project) %>

  <%= link_to "delete", project_path(@project), :method => :delete, :confirm => "Really delete the portfolio item?" %>
<% end %>