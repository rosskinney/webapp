<div class="archives">
    <h2>Blog Archive</h2>

    <% @article_months.sort.reverse.each do |month, articles| %>
    <h3><%=h month.strftime("%B %Y") %></h3>
    <ul>
        <% for article in articles %>
        <li><%=h link_to article.title, article_path(article) %></li>
        <% end %>
    </ul>
    <% end %>
</div>